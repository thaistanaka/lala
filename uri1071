#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,j,x,y;
    scanf("%i\n %i\n",&x,&y);
    j=0;
    if(x>y){
    for(i=y+1;i<=x-1;i++){
        if(i%2!=0)
            j=i+j;
    }
    printf("%i\n",j);}
    else{
        if(y>x){
    for(i=x+1;i<=y-1;i++){
        if(i%2!=0)
            j=i+j;
    }
    printf("%i\n",j);}
        else
        printf("%i\n",j);}
        
    return 0;
}
